.form-data
  background #fff
  border-radius 4px
  box-shadow 0 0 8px rgba(0, 0, 0, 0.10)
  display flex
  flex-direction column
  margin 20px 0 0
  padding 10px
  transition box-shadow 0.3s ease-in-out
  width 100%

  &:hover
    box-shadow 0 0 16px rgba(0, 0, 0, 0.10)

  > .label
    font-size 16px
    margin 4px 0 2px 0

  > .input
    display block
    margin 0 0 10px 0

  > .button
    background linear-gradient(to left, #00cec9, #6c5ce7)
    border none
    margin 10px 0

  > .message > .notification
    text-align center
